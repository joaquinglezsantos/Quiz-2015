<h1 class='title'>Autores</h1><hr/>
<%for(var author in authors){%>
	<div class="panel panel-default view">
		<div class="panel-body">
			<div class="row">
				<div class="col-sm-2 col-xs-12">
					<img class="img-responsive img-circle center-block" src="<%= authors[author].urlphoto %>" alt="Autor" />
				</div>
				<div class="col-sm-10 col-xs-12">
					<div class="panel">
						<h3><%= authors[author].name %></h3>
						<%if(authors[author].urlvideo) {%>
							<video controls>
								<source src="<%= authors[author].urlvideo %>">
								Your browser does not support the video tag.
							</video>
						<%}%>
					</div>
				</div>
			</div>
		</div>
	</div>
<%}%>